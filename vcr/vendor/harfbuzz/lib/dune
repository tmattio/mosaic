(rule
 (targets c_flags c_library_flags)
 (deps
  (:discover ../config/discover.exe))
 (action
  (run %{discover})))

(library
 (name harfbuzz)
 (public_name vcr.harfbuzz)
 (libraries freetype)
 (foreign_stubs
  (language c)
  (names harfbuzz_stubs)
  (flags
   (:standard
    (:include c_flags))))
 (c_library_flags
  (:standard
   (:include c_library_flags))))

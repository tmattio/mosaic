(package
 (name tree-sitter)
 (synopsis "OCaml bindings to Tree-sitter")
 (description
  "OCaml bindings to Tree-sitter, an incremental parsing system for programming tools. Provides efficient parsing and syntax tree manipulation for source code analysis, syntax highlighting, and code navigation.")
 (depends
  ocaml
  dune
  (alcotest :with-test))
 (tags
  (parsing tree-sitter syntax "syntax-tree" "incremental-parsing")))
